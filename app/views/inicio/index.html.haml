- page_title! 'Dj Alonso Valencia | Alquiler de equipos'
#preface-top
  .container
    #myCarousel.carousel.slide
      %ol.carousel-indicators
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "0", :class => "active"}
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "1"}
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "2"}
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "3"}
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "4"}
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "5"}
        %li{:"data-target" => "#myCarousel", :"data-slide-to" => "6"}

      <!-- Carousel items -->
      .carousel-inner
        .item.active
          = image_tag asset_path('img-slide-1.jpg')
        .item
          = image_tag asset_path('img-slide-2.jpg')
        .item
          = image_tag asset_path('img-slide-3.jpg')
        .item
          = image_tag asset_path('img-slide-4.jpg')
        .item
          = image_tag asset_path('img-slide-5.jpg')
        .item
          = image_tag asset_path('img-slide-6.jpg')
        .item
          = image_tag asset_path('img-slide-7.jpg')

      <!-- Carousel nav -->
      = link_to raw('&lsaquo;'), '#myCarousel', :"data-slide" => 'prev', :class => 'carousel-control left'
      = link_to raw('&rsaquo;'), '#myCarousel', :"data-slide" => 'next', :class => 'carousel-control right'

.container
  %h2.page-title
    Dj Alonso Valencia
  .dj-presentation
    .content
      .dj-presentation-foto
        = image_tag asset_path('img-alonso.jpg')
        %p
          Con casi 20 años de experiencia, este Dj ha sabido poner a bailar a todos los públicos.
