= form_for @servicio, :html => {:multipart => true	} do |f|
  - if @servicio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@servicio.errors.count, "error")} prohibited this servicio from being saved:"
      %ul
        - @servicio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :fotografia
    = f.file_field :fotografia
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :equipos
    = f.text_area :equipos
  .actions
    = f.submit 'Save'
