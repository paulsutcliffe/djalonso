= render 'scripts/megafolio'

.container
  %h2.page-title= page_title! 'Galería'

  - if current_admin 
    .administrate.create
      = link_to 'Crear Álbum', new_album_path, class: 'btn btn-primary'

  .content
    .content-inner
      .megafolio-container

        - @albumes.each_with_index do |album, index|
          - unless album.fotos.empty?
            .div{:class => 'mega-entry cat-all cat-one', :id => 'mega-entry-' + index.to_s, :"data-src" => album.fotos.first.imagen_url(:albumes_index).to_s, :"data-width" => '504', :"data-height" => '400'}
              .div{:class => 'mega-covercaption mega-square-top mega-landscape-right mega-portrait-bottom mega-white'}
                .mega-title
                  %h3
                    = link_to album.nombre, album
               

            

